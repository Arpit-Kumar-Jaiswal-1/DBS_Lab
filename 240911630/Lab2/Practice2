create table department(
DeptNo Number(5) Primary key,
DeptName Varchar(30) unique,
Location Varchar(40)
);

insert into department values(67,'CSE','AB5');
insert into department values(69,'IT','AB4');

select * from department;

create table Employee(
EmpNo Number(5) Primary key, 
EmpName Varchar(40) Not null,
Gender Char(1) NOT NULL check (Gender IN('M','F')),
Salary Number(9) Not null,
Address Varchar(30) Not null,
DNo Number(5));


Alter table Employee add constraint fk
foreign key(DNo) references department(DeptNo);


Insert into department values(5,'AIML','ab5');


Insert into Employee values(101,'Arpit','M',9000000,'Manipal',5);

Alter table Employee
Drop constraint fk;
--When a parent tuple is deleted, all corresponding child tuples referencing it are automatically deleted due to the ON DELETE CASCADE option, thereby maintaining referential integrity.
Alter table Employee ADD constraint fk
foreign key (DNo) references department(DeptNo)
on delete CASCADE;

delete from department where DeptNo=5;
select * From Employee;

Alter table Employee
ADD constraint name 
default 10000 for Salary;

select name , dept_name from Student;

select * from instructor where dept_name='CSE';

select title from Course where dept_name='CSE' and credits=3;

select t.course_id , c.title
from Takes t , Course c
where t.course_id=c.course_id
and ID=12345;

select name , salary from instructor where salary between 40000 and 90000;

select ID from Instructor where ID not in( select ID from Teaches where id is not
null);

select s.name,c.title,t.year
from Student s, Course c, Takes t , Section sec
where  s.ID=t.ID
AND    t.course_id=c.course_id
And   t.course_id=sec.course_id
and  sec.room_number=303;



select s.name, c.course_id,c.title as c_name
from Student s,Takes t, Course c 
where s.ID=t.ID
and c.course_id=t.course_id
and t.year =2015;

select name , salary as inst_salary from Instructor 
where salary > some (select salary from
Instructor where dept_name='CSE');

select name from Instructor where dept_name Like '%ch%';

